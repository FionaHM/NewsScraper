<!-- display articles -->
<div class="container">
	{{!--<div class="row">--}}
			<div class="valign-wrapper row">
				<div class="col s12">
					<div><h5 class="center-align" id="current-user-id" data-id="{{userObj.id}}" data-username="{{userObj.username}}"><strong>Welcome {{userObj.username}}!</strong></h5></div>
					<div><p class="center-align">Here is the news of the day specially selected for your enlightenment. Enjoy!</p></div>
					<div><p class="center-align">Just select a news item to expand and add comments.</p></div>

				</div>
			</div>
			<div class="divider"></div>
		
			<div class="row">
			<ul>
				{{#each articleObj}}
				<div class="row">
					<div onclick="showDetails('id-{{this.id}}')" class="card-panel #cfd8dc blue-grey lighten-4"><p><strong>{{this.title}}</strong></p></div>

					<div id="id-{{this.id}}" class="show-detail">
						<div class="col s12 m4 l3"> <!-- Note that "m4 l3" was added -->
							<!-- Grey navigation panel-->
							{{!--<p><strong>{{this.title}}</strong></p>--}}
							<div class="row"><div class="col s12"><img src="{{this.img}}" alt="{{this.credit}}"></div></div>
							<div class="row"><div class="col s2"><p><strong>Credit: </div><div class="col s10"></strong> {{this.credit}}</p></div></div>
							<div class="row"><div class="col s2"><p><strong>Content Updated: </div><div class="col s10"></strong> {{this.created_at}}</p></div></div>

						</div>

						<div class="col s12 m8 l9"> <!-- Note that "m8 l9" was added -->
							<!-- Teal page content -->
							<li>
								<div onclick="openAndCloseArticle('{{this.id}}')"><i class="material-icons">view_list</i><p class="comments">Comments</p></div>
								{{!--<p><strong>{{this.title}}</strong></p>--}}
								<a href="{{this.link}}" target="_blank">{{this.title}}</a> 
								{{!--<p><strong>{{this.link}}</strong></p>--}}
								
								<div id="{{this.id}}" class="full-article">

									{{!--<img src="{{this.img}}" alt="{{this.credit}}">--}}
									<ul>
										{{#each this.comments}}

											<li> {{this._id}} |  {{this.comment}} |  {{this._creator.username}} | </li>
		
												{{!--user can only delete users own comments--}}
												<button onclick="verifyOwner('{{this._creator._id}}', '{{this._id}}','{{this.article}}')">Delete Comment</button>
						
											
					
										{{/each}}
									</ul>
									<div id="err-{{this.id}}"></div>
									<div >

										<form  class="new-user-comment" id="form{{this.id}}" action="/comment" method="POST">
										{{!--User input html will be painted here--}}
										
										</form>
									</div>
								</div>


							</li>
						</div>{{!--</div> show-detail--}}
					</div>

					</div>
					{{!--<div class="divider"></div>--}}
					
            


				{{/each}}

			</ul>
			</div>

	{{!--</div> </div> row--}}
</div> {{!--</div> container--}}
