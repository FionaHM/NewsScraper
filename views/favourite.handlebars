<!-- display articles -->
<div class="container">
	{{!--<div class="row">--}}
	<div class="valign-wrapper row">
			<div class="col s12">
				<div><h5 class="center-align" id="current-user-id" data-id="{{userObj.id}}" data-username="{{userObj.username}}"><strong>Welcome {{userObj.username}}!</strong></h5></div>
				<p class="center-align">Here are your saved stories and commentary. The most recent stories are displayed first.</p>
                <p class="center-align"> To view more or edit comments select "All Articles Link" from the navigation menu.</p>
                <p class="center-align">Enjoy!</p>

			</div>
	</div>
	<div class="divider"></div>

	<ul>
		{{#each articleObj}}
		 <div class="section">
		 <div class="row">
			<div class="row">
				<div class="col s12 m12 l2 center-align">

				</div>
				<div class="col s12 m12 l4 center-align">
					<div class="row">
						<div class="col s12"><img class="news-img" src="{{this.img}}" alt="{{this.credit}}"></div>
					</div>
					<div class="row">
						<div class="row">
							<div class="col s12"><a href="{{this.link}}" target="_blank">Link to Article</a></div>
						</div>
					</div>
				</div>
				<div class="col s12 m12 l6 center-align">
					<div class="row">
						<div class="col s12" ><h4><strong>{{this.title}}</strong></h4></div>
						<div class="col s12"><p><strong>Content Updated:</strong> {{this.created_at}}</p></div>

					</div>
				</div>

			</div>
	
			{{!comment section----}}
			<div class="row">
				<div class="col s2">
				</div>
				<div class="col s10">
					<div id="{{this.id}}">
                        <div id="err-{{this.id}}"></div>
                        <h5 class="align-center"> Comments</h5>
                        <table>
                            <thead>
                            <tr>
                                <th data-field="id">Commentator</th>
                                <th data-field="name">Comment</th>
                            </tr>
                            </thead>
                            <tbody>                   
                            {{#each this.comments}}
                                <tr>
                                    <td><strong>{{this._creator.username}}</strong></td>
                                    <td> {{this.comment}} </td>
                                
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
					</div>
				</div>
				</div>
					<div class="divider"></div>
				</div>	
		  </div> {{!--</div> end of section--}} 
		{{/each}}
	</ul>
</div> {{!--</div> container--}}

